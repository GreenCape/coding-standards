{
  "name": "greencape/coding-standards",
  "description": "Composer installable Coding Standards Definitions.",
  "homepage": "https://github.com/GreenCape/coding-standards",
  "keywords": [
    "phpcs",
    "standards",
    "Joomla"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Niels Braczek",
      "email": "nbraczek@bsds.de",
      "role": "lead"
    }
  ],
  "require": {
    "squizlabs/php_codesniffer": "~2"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "codegyre/robo": "^0.6.0"
  },
  "minimum-stability": "RC",
  "replace": {
    "greencape/joomla-cs": "*"
  },
  "support": {
    "issues": "https://github.com/GreenCape/coding-standards/issues"
  },
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/greencape/coding-standards/src",
    "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/greencape/coding-standards/src"
  }
}
